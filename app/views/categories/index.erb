<h1 class="text-center mt-4">Categories</h1>
    <p class="container text-center">
        <%= link_to 'Create a new category', new_category_path, class: "btn  btn-info "%>
    </p>


<div class="flickr_pagination">
        <%= will_paginate @articles, :container => false %>
</div>
<div class="container">  
    <div class="row">
        <% @categories.each do |category| %>
            <div class="container col" id="home-container">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-info" %></h5>
                        <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="flickr_pagination">
        <%= will_paginate @articles, :container => false %>
</div> 