<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
            <%= form_with(model: @user,  local: true) do |f| %>

              <div class="form-group row">
                &ensp;
                &nbsp;
                <%= f.label :username %>
                <div class="col-10">
                  <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                </div>
              </div>

              <div class="form-group row">
                &ensp;
                &nbsp;
                <%= f.label :password %>
                <p></p>
                <div class="col-10"> 
                  <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
                </div>
              </div>

              <p></p>
              <button class="btn btn-lg btn-primary btn-block text-uppercase btn-primary" type="submit">SIGN UP</button>
              <hr class="my-4">
              <%= link_to 'SIGN IN', login_path, class: "btn btn-lg btn-success btn-block"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
