<div class="container" id="home-container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :watched, class: "col-2   text-white"  "Watched before?" %> <br />
          <%= f.check_box :watched %> <br />
        </div>

        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :rating, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :rating, class: "form-control shadow rounded", placeholder: "Rating" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :expecting, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :expecting, class: "form-control shadow rounded", placeholder: "Expecting" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 3, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :review, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :review, rows: 3, class: "form-control shadow rounded", placeholder: "Review of article" %>
          </div>
        </div>

        <div class="col-sm-offset-2 col-sm-8">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>

